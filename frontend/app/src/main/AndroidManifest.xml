<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fiveis.xend"
    >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/xend_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/xend_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xend">


        <activity
            android:name=".ui.login.MainActivity"
            android:exported="true"

            android:theme="@style/Theme.Xend">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Custom URI Scheme -->
                <data
                    android:scheme="com.fiveis.xend"
                    android:host="oauth2callback" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.inbox.InboxActivity" />
        <activity android:name=".ui.sent.SentActivity" />
        <activity android:name=".ui.mail.MailActivity" />
        <activity android:name=".ui.compose.MailComposeActivity" />
        <activity android:name=".ui.view.MailDetailActivity" />
        <activity android:name=".ui.view.ReplyComposeActivity" />
        <activity android:name=".ui.view.ReplyDirectComposeActivity" />
        <activity android:name=".ui.contactbook.ContactBookActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.contactbook.AddContactActivity" />
        <activity android:name=".ui.contactbook.AddGroupActivity" />
        <activity android:name=".ui.contactbook.GroupDetailActivity" />
        <activity android:name=".ui.contactbook.ContactDetailActivity" />
        <activity android:name=".ui.profile.ProfileActivity" />



    </application>

</manifest>
